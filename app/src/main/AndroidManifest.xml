<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sdsu.tvidhate.pool_in">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_symbol"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_symbol_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignUpActivity"
            android:label="@string/signUpTitle" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/homeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
            </activity>
        <activity
            android:name=".activity.TripDetailsActivity"
            android:label="@string/tripDetailsTitle" />
        <activity
            android:name=".activity.UpdateRideActivity"
            android:label="@string/updateRideTitle" />
        <activity
            android:name=".activity.RideHistoryDetailsActivity"
            android:label="@string/rideHistoryTitle" />
        <activity android:name=".activity.AppInfoActivity"></activity>
    </application>

</manifest>