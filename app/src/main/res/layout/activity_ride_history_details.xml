<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbars="horizontal">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/ten_dp"
        android:orientation="vertical"
        tools:context=".activity.RideHistoryDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ride_history_source"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_weight="2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_arrow"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/ride_history_destination"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:text="@string/date"/>
            <TextView
                android:id="@+id/ride_history_date"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:text="@string/time"/>
            <TextView
                android:id="@+id/ride_history_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:text="@string/posted_by"/>
            <TextView
                android:id="@+id/ride_history_posted_by"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:text="@string/contact"/>
            <TextView
                android:id="@+id/ride_history_poster_contact"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"
                android:text="@string/people_in_the_ride"/>
            <TextView
                android:id="@+id/ride_history_people"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@color/grey"
                android:drawablePadding="8dp"
                android:ems="10"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ride_history_status"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="12dp"
            android:drawablePadding="8dp"
            android:ems="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:padding="14dp"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/ride_history_back"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="15dp"
            android:text="@string/back"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
